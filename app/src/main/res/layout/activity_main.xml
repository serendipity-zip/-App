<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/viewweather"
        android:layout_width="800px"
        android:layout_height="wrap_content"
        android:background="@drawable/button_shape"
        android:text="查看近5日天气"
        android:textColor="#FFFFFF"
        android:onClick="CheckWeather"
        android:textSize="20sp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.939" />



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/main_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:transitionName="testImg"
            app:srcCompat="@drawable/yintian3">
        </ImageView>
        <RelativeLayout
            android:id="@+id/titile"
            android:layout_width="match_parent"
            android:layout_height="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"></LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/city_title"
            android:layout_below="@id/titile"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/imageButton3"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginLeft="25dp"
                    android:scaleType="centerCrop"
                    android:background="#0000"
                    app:srcCompat="@drawable/ic_plus">
                </ImageButton>
                <TextView
                    android:id="@+id/detailaddress"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:text="南岸区"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:textSize="25.0sp">
                </TextView>
                <ImageButton
                    android:id="@+id/sandian"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:scaleType="centerCrop"
                    android:background="#0000"
                    app:srcCompat="@drawable/sandian">
                </ImageButton>
            </LinearLayout>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/temperatureinfo"
            android:layout_below="@id/city_title"
            android:layout_width="match_parent"
            android:layout_height="310dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="310dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/temperature"
                    android:layout_width="match_parent"
                    android:layout_height="210dp"
                    android:text="9℃"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:textSize="97.0sp"/>
                <TextView
                    android:id="@+id/weathercondition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="阴"
                    android:textColor="#FFFFFF"
                    android:textSize="30.0sp"/>
                <TextView
                    android:id="@+id/blankshang"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="阴"
                    android:gravity="center"
                    />
            </LinearLayout>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/weather_info"
            android:layout_below="@id/temperatureinfo"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageButton
                    android:id="@+id/pollutionlevelicon"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginLeft="25dp"
                    android:scaleType="centerCrop"
                    android:background="#0000"
                    app:srcCompat="@drawable/pm25">
                </ImageButton>
                <TextView
                    android:id="@+id/pollutionlevel"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="轻度污染129"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:textSize="20.0sp">
                </TextView>

                <ImageButton
                    android:id="@+id/rainchanceicon"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="100dp"
                    android:layout_marginLeft="100dp"
                    android:scaleType="centerCrop"
                    android:background="#0000"
                    app:srcCompat="@drawable/shidu">
                </ImageButton>
                <TextView
                    android:id="@+id/shidu"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="湿度0%"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:textSize="20.0sp">
                </TextView>
            </LinearLayout>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/blank"
            android:layout_below="@id/weather_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/blank2"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:textSize="20.0sp"/>
            </LinearLayout>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/weather_info1"
            android:layout_below="@id/blank"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageButton
                    android:id="@+id/weather_icon1"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginLeft="25dp"
                    android:scaleType="centerCrop"
                    android:background="#0000"
                    app:srcCompat="@drawable/ic_plus">
                </ImageButton>
                <TextView
                    android:id="@+id/date1"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="今天"
                    android:gravity="center"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="#FFFFFF"
                    android:textSize="20.0sp">
                </TextView>
                <TextView
                    android:id="@+id/weather_forcast1"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:text="霾转小雨"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:textSize="20.0sp">
                </TextView>
                <Button
                    android:id="@+id/level1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="#0000"
                    android:text="轻度"
                    android:textColor="#FFFFFF">
                </Button>
                <TextView
                    android:id="@+id/high1"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginStart="55dp"
                    android:layout_marginLeft="55dp"
                    android:text="-19℃"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:textSize="20.0sp"
                    >
                </TextView>
                <TextView
                    android:id="@+id/spit1"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="/"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:textSize="20.0sp"
                    >
                </TextView>
                <TextView
                    android:id="@+id/low1"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="-26℃"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:textSize="20.0sp"
                    >
                </TextView>
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/weather_info2"
            android:layout_below="@id/weather_info1"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/weather_icon2"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginLeft="25dp"
                    android:scaleType="centerCrop"
                    android:background="#0000"
                    app:srcCompat="@drawable/ic_plus">
                </ImageButton>

                <TextView
                    android:id="@+id/date2"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="明天"
                    android:gravity="center"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="#FFFFFF"
                    android:textSize="20.0sp">
                </TextView>
                <TextView
                    android:id="@+id/weather_forcast2"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:text="霾转小雨"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:textSize="20.0sp">
                </TextView>
                <Button
                    android:id="@+id/level2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="#0000"
                    android:text="轻度"
                    android:textColor="#FFFFFF">
                </Button>
                <TextView
                    android:id="@+id/high2"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginStart="55dp"
                    android:layout_marginLeft="55dp"
                    android:text="9℃"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:textSize="20.0sp"
                    >
                </TextView>
                <TextView
                    android:id="@+id/spit2"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="/"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:textSize="20.0sp"
                    >
                </TextView>
                <TextView
                    android:id="@+id/low2"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="6℃"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:textSize="20.0sp"
                    >
                </TextView>
            </LinearLayout>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/weather_info3"
            android:layout_below="@id/weather_info2"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageButton
                    android:id="@+id/weather_icon3"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginLeft="25dp"
                    android:scaleType="centerCrop"
                    android:background="#0000"
                    app:srcCompat="@drawable/ic_plus">
                </ImageButton>
                <TextView
                    android:id="@+id/date3"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:text="后天"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:textSize="20.0sp">
                </TextView>
                <TextView
                    android:id="@+id/weather_forcast3"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:text="霾转小雨"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:textSize="20.0sp">
                </TextView>
                <Button
                    android:id="@+id/level3"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="#0000"
                    android:text="轻度"
                    android:textColor="#FFFFFF">
                </Button>
                <TextView
                    android:id="@+id/high3"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginStart="55dp"
                    android:layout_marginLeft="55dp"
                    android:text="9℃"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:textSize="20.0sp"
                    >
                </TextView>
                <TextView
                    android:id="@+id/spit3"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="/"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:textSize="20.0sp"
                    >
                </TextView>
                <TextView
                    android:id="@+id/low3"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="6℃"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:textSize="20.0sp"
                    >
                </TextView>
            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>






</androidx.constraintlayout.widget.ConstraintLayout>